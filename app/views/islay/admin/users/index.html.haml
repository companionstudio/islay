- breadcrumb('Users')

= content do
  %table.fixed-header(cellpadding=0 cellspacing=0)
    %thead
      %th Name
      %th Updated At
      %th.control Edit
      %th.control Delete
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td.time= user.updated_at
          %td= link_to('Edit', path(:edit, user))
          %td= link_to('Delete', path(:delete, user))

= footer do
  = new_button('User', :user)
