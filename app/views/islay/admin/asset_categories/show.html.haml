- sub_header('Category', @asset_category.name)
- control('Asset', path(:new, :asset, @asset_category), :new)
- control('Edit', path(:edit, @asset_category), :edit)
- control('Delete', path(:delete, @asset_category), :delete)

= content do
  %ul
    - @asset_category.assets.each do |asset|
      %li
        - if asset.preview.present?
          = image_tag(asset.preview.url(:admin_thumb_small))
        = link_to(asset.name, path(asset))
        (#{asset.kind})
