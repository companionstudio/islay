%h3 Activity Log

%table#activity-logs
  %thead
    %tr
      %th{colspan: 2} Event
      %th Item
      %th At

  %tbody
    - @logs.each do |log|
      %tr(class="#{log.type}-log")
        %td
          - if log.user_name.blank?
            Self
          - else
            #{log.user_name.humanize}
        %td= log.event.humanize
        %td= link_to("<strong>#{log.type.humanize}:</strong> #{log.name}".html_safe, log.url)
        %td.meta
          %span.time= log.created_at
